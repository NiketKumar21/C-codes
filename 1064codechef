#include <stdio.h>

int main() {
int t;
scanf("%d",&t);
int i;
for(i=1;i<=t;i=i+1)
{
    int n,f=0;
    scanf("%d",&n);
    int a[n];
    for(int x=0; x<n; x=x+1)
	   {
	   scanf("%d",&a[x]);
	   }
	   
	   for(int k=0;k<n-1;k=k+1)
	   {
	       if(a[k]>a[k+1])
	       {
	           a[k]=a[k]+a[k+1];
	           a[k+1]=a[k]-a[k+1];
	           a[k]=a[k]-a[k+1];
	           break;
	           
	       }
	   }
	   for(int g=0;g<n-1;g=g+1)
	   {
	       if(a[g]>a[g+1])
	       {
	           f=f+1;
	       }
	   }
	   if(f>0)
	   {
	       printf("No\n");
	   }
	   else
	   {
	       printf("Yes\n");
	   }
   
}

}
