#include <stdio.h>

int main() {
int t;
scanf("%d",&t);
int i;
for(i=1;i<=t;i=i+1)
{
    int n,x,k;
    scanf("%d %d %d",&n,&x,&k);
    int b=x%k;
    int g=n-x;
    g=g%k;
    if(b==0)
    {
        printf("%d\n",g);
    }
    else
    {
        if(b>g)
        {
            printf("%d\n",b-g);
        }
        else
        {
            printf("%d\n",g-b);
        }
    }
}

}
